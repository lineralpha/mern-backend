{
    "name": "excel-backend-server",
    "version": "0.1.0",
    "description": "Backend server for Excel Academy Application",
    "main": "server.js",
    "scripts": {
        "nodemon:start-dev": "nodemon",
        "start:dev": "ts-node-dev ./src/server.ts",
        "start": "tsc && node ./build/server.js",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "body-parser": "^1.19.0",
        "connect-mongo": "^4.6.0",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "express-rate-limit": "^5.3.0",
        "express-session": "^1.17.2",
        "helmet": "^4.6.0",
        "http-status-codes": "^2.1.4",
        "joi": "^17.4.2",
        "mongodb": "^4.1.2",
        "mongoose": "^6.0.7",
        "morgan": "^1.10.0"
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.1",
        "@types/connect-mongo": "^3.1.3",
        "@types/cors": "^2.8.12",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.13",
        "@types/express-rate-limit": "^5.1.3",
        "@types/express-session": "^1.17.4",
        "@types/helmet": "^4.0.0",
        "@types/joi": "^17.2.3",
        "@types/mongodb": "^4.0.7",
        "@types/morgan": "^1.9.3",
        "@types/node": "^16.9.6",
        "nodemon": "^2.0.13",
        "ts-node": "^10.2.1",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.4.3"
    },
    "@comment nodemon-config": [
        {
            "note": "not perfect way to add comment but it just works",
            "reference": "https://dev.to/dhurlburtusa/comment/16nn8"
        },
        "config passed to nodemon",
        "just simply run 'nodemon' in terminal to monitor code change",
        "see https://stackoverflow.com/a/37979548"
    ],
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ext": "ts, json",
        "ignore": [
            "src/**/*.spec.ts"
        ],
        "exec": "ts-node ./src/server.ts"
    }
}
